{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "model/*": [
        "app/model/*"
      ],
      "@modules/*": [
        "app/modules/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "stream": ["node_modules/readable-stream/readable.js"]
    },
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
